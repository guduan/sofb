record(bo, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)-Cmd") {
   field(VAL, "0")
   field(ZNAM, "Idle")
   field(ONAM, "Setting")
   field(HIGH, "1")
   field(FLNK, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)_asub_")
}

record(ao, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)angle-SP") {
   field(VAL, "0.0")
