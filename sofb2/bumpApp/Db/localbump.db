}

record(aSub, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)_asub_") {
   field(INPA, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)angle-SP")
   field(FTA,  "DOUBLE")
   field(NOA,  "1")

   field(INPB, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)offset-SP")
   field(FTB,  "DOUBLE")
   field(NOB,  "1")

   field(INPC, "$(OFST1L)")
   field(FTC,  "DOUBLE")
   field(NOC,  "1")

   field(INPD, "$(OFST1R)")
   field(FTD,  "DOUBLE")
   field(NOD,  "1")

   field(INPE, "$(OFST2L)")
   field(FTE,  "DOUBLE")
   field(NOE,  "1")

   field(INPF, "$(OFST2R)")
   field(FTF,  "DOUBLE")
   field(NOF,  "1")

   field(INPG, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)L")
   field(FTG,  "DOUBLE")
   field(NOG,  "1")

   field(INPH, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)mmscale")
   field(FTH,  "DOUBLE")
   field(NOH,  "1")

   field(INPI, "SR:APHLA:SOFB{BUMP:$(ID)}$(PL)op")
   field(FTI,  "LONG")
   field(NOI,  "1")

   field(OUTA, "$(OFST1L) PP")
   field(FTVA, "DOUBLE")
   field(NOVA, "1")

   field(OUTB, "$(OFST1R) PP")
   field(FTVB, "DOUBLE")
   field(NOVB, "1")

   field(OUTC, "$(OFST2L) PP")
   field(FTVC, "DOUBLE")
   field(NOVC, "1")

   field(OUTD, "$(OFST2R) PP")
   field(FTVD, "DOUBLE")
   field(NOVD, "1")

   field(SNAM, "sofbLocalBump")
   #field(SCAN, "1 second")
}
